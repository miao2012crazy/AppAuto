<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="gone"
        android:id="@+id/ll_bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="选择米种"
                android:textColor="#e7e3e3"
                android:textSize="@dimen/sp_30" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#fff" />

                <ImageView
                    android:id="@+id/iv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_circle_normal" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="碾米精度"
                android:textColor="#e7e3e3"
                android:textSize="@dimen/sp_30" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#e7e3e3" />

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_circle_normal" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_2"

                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="支付方式"
                android:textColor="#e7e3e3"
                android:textSize="@dimen/sp_30" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#fff" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_circle_normal" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_3"

                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="加工"
                android:textColor="#e7e3e3"
                android:textSize="@dimen/sp_30" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#fff" />

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_circle_normal" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="取米"
                android:textColor="#e7e3e3"
                android:textSize="@dimen/sp_30" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:background="#fff" />

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_circle_normal" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</layout>
