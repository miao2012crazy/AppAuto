<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_attach"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/bind"
                android:drawablePadding="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="绑定手机号"
                android:textColor="#6561ff"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fffbdb"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我为什么要绑定手机号呢？"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_tag"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:gravity="center_vertical|right"
                        android:text="会员卡号："
                        android:textColor="#333"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_vertical|right"
                        android:text="绑定手机号："
                        android:textColor="#333"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_vertical|right"
                        android:text="输入验证码："
                        android:textColor="#333"
                        android:textSize="@dimen/sp_30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_member_card"
                        android:layout_width="400dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_et_input"
                        android:gravity="center_vertical"
                        android:hint="会员卡号"
                        android:paddingLeft="@dimen/dp_30"
                        android:textSize="@dimen/sp_30" />

                    <LinearLayout
                        android:layout_width="500dp"

                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_tel"
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_et_input"
                            android:gravity="center_vertical"
                            android:hint="手机号码用于接收提货码"
                            android:paddingLeft="@dimen/dp_30"
                            android:textSize="@dimen/sp_30" />

                        <TextView
                            android:id="@+id/tv_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:text="修改"
                            android:textColor="#e221b317"
                            android:textSize="@dimen/sp_30" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="500dp"

                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_et_input"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_30"
                            android:textColor="#333"
                            android:textSize="@dimen/sp_30" />

                        <TextView
                            android:id="@+id/tv_get_code"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:background="@drawable/shape_btn_return_2"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:text="获取验证码"
                            android:textColor="#FFF"
                            android:textSize="@dimen/sp_30" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <Button
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/shape_btn_return_2"
                android:layout_margin="@dimen/dp_30"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_confirm"
                android:textSize="@dimen/sp_30"
                android:text="确认修改"
                android:textColor="#fff"
                android:padding="@dimen/dp_10"
                android:layout_width="260dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</layout>