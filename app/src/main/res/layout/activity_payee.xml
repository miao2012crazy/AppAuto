<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="handler"
            type="com.fresh.app.handlerevent.HandlerEvent"/>
        <variable
            name="presenter"
            type="com.fresh.app.view.viewimpl.PayeeActivity.Presenter"/>
    </data>
    <LinearLayout  android:layout_width="match_parent"
        android:background="@mipmap/ic_detail_bg"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_yundao_head" />

        <include layout="@layout/layout_order"
            android:id="@+id/order"/>

        <include
            android:id="@+id/layout_list"
            layout="@layout/layout_pay_way"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:onClick="@{presenter.itemPayConfirm}"
                android:id="@+id/tv_confirm"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/dp_10"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="чбо шод"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_item_confirm"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                 />
        </RelativeLayout>
    </LinearLayout>
</layout>
