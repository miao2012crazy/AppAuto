<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.fresh.app.bean.CardHistoryItemBean" />

        <variable
            name="items"
            type="java.util.List" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_item_history"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{item.regDate}"
            android:textColor="#666"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#00d9ff" />

        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单日期"
            android:textColor="#666"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#00d9ff" />

        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{item.buyProductPrice}"
            android:textColor="#666"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#00d9ff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{String.valueOf(item.cardState)}"
            android:textColor="#666"
            android:textSize="@dimen/sp_30" />
    </LinearLayout>
</layout>