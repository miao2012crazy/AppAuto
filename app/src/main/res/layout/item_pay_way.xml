<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.fresh.app.bean.PayeeBean"/>

        <variable
            name="items"
            type="java.util.List"/>
        <variable
            name="handler"
            type="com.fresh.app.handlerevent.HandlerEvent"/>
    </data>
    <RelativeLayout
        android:onClick="@{(view)->handler.itemPayWayClick(view,item)}"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"/>
        <ImageView
            app:imageUrlLocal="@{item.pay_image}"
            android:id="@+id/iv_pay_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_pay_way"
            style="@style/detail_text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@{item.pay_name}"
            android:textColor="#333"
            android:textSize="40sp" />

        <ImageView
            android:visibility="@{item.visiable ? View.VISIBLE : View.GONE}"
            android:id="@+id/iv_selected"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:src="@mipmap/ic_checked" />
    </RelativeLayout>

</layout>

